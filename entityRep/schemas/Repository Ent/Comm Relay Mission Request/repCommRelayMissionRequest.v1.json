{
  "title": "repCommRelayMissionRequest",
  "type": "object",
  "description": "The Comm Relay Mission Request Entity Json Schema",
  "properties": {
    "id": {
      "type": "string",
      "description": "The comm relay mission request repository id\nPut blank \"\" is using New"
    },
    "version": {
      "type": "number",
      "description": "The entity version in repository"
    },
    "commRelayMissionRequest": {
      "title": "requestCommRelayMission",
      "type": "object",
      "properties": {
        "droneId": {
          "type": "string",
          "description": "The drone that need to execute the requested mission"
        },
        "commRelayType": {
          "type": "string",
          "enum": [
            "Area",
            "Dynamic"
          ],
          "description": "Type of comm relay fixed or dynamic\nDynamic - folow FRs\nArea - Cover area"
        },
        "missionData": {
          "anyOf": [
            {
              "properties": {
                "area": {
                  "title": "Polygon",
                  "type": "object",
                  "x-examples": {
                    "example-1": {}
                  },
                  "properties": {
                    "coordinates": {
                      "type": "array",
                      "minItems": 3,
                      "items": {
                        "title": "GeoPoint",
                        "type": "object",
                        "description": "",
                        "properties": {
                          "lat": {
                            "type": "number",
                            "minimum": -90,
                            "maximum": 90,
                            "description": "Decimal degrees"
                          },
                          "lon": {
                            "type": "number",
                            "minimum": -180,
                            "maximum": 180,
                            "description": "Decimal degrees"
                          },
                          "alt": {
                            "type": "number"
                          }
                        },
                        "required": [
                          "lat",
                          "lon"
                        ]
                      }
                    }
                  },
                  "required": [
                    "coordinates"
                  ]
                }
              }
            },
            {
              "properties": {
                "FRs": {
                  "type": "array",
                  "description": "Array of RF IDs to track",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "description": "area - incase type is area\nFRs - in case type is dynamic",
          "type": "object"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "InProgress",
            "Completed",
            "Cancelled"
          ]
        }
      },
      "required": [
        "droneId",
        "commRelayType",
        "status"
      ]
    },
    "lastAction": {
      "type": "string",
      "enum": [
        "Insert",
        "Update",
        "Delete"
      ],
      "description": "Last action on entity"
    }
  },
  "required": [
    "id",
    "version",
    "commRelayMissionRequest"
  ]
}
