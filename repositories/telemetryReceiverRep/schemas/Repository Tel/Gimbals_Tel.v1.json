{
  "title": "Gimbals_Tel",
  "type": "object",
  "description": "Gimbals telemetry",
  "properties": {
    "timestamp": {
      "title": "timestamp",
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "number",
          "description": "Mili sec from 1970"
        }
      },
      "required": [
        "timestamp"
      ]
    },
    "gimbals": {
      "type": "array",
      "description": "Gimbals telemetry. All gimbals telemetry data should be sent each message. The current message always overide the old messages",
      "items": {
        "title": "Gimbal_Tel",
        "type": "object",
        "description": "The gimbal telemetry",
        "properties": {
          "id": {
            "type": "string",
            "description": "The gimbal unique id"
          },
          "droneId": {
            "type": "string",
            "description": "Drone ID the gimbal is physically connected to"
          },
          "AIMode": {
            "type": "number",
            "enum": [
              0,
              1,
              2,
              3,
              4
            ],
            "description": "The visual analytics algorithms running for a drone"
          },
          "gimbalParameters": {
            "title": "gimbalParameters.v1",
            "type": "object",
            "properties": {
              "pitch": {
                "type": "number",
                "minimum": -10,
                "maximum": 10,
                "description": "Delta pitch"
              },
              "yaw": {
                "type": "number",
                "minimum": -10,
                "maximum": 10,
                "description": "Delta yaw"
              }
            },
            "required": [
              "pitch",
              "yaw"
            ]
          },
          "visibleCameraParameters": {
            "title": "visibleCameraParameters.v1",
            "type": "object",
            "properties": {
              "zoomVisibleCamera": {
                "type": "number",
                "maximum": 100,
                "minimum": 0
              }
            },
            "required": [
              "zoomVisibleCamera"
            ]
          },
          "infraredCameraParameters": {
            "title": "infraredCameraParameters.v1",
            "type": "object",
            "properties": {
              "zoomInfraredCamera": {
                "type": "number",
                "minimum": 0,
                "maximum": 100
              },
              "colorPaletteInfraredCamera": {
                "type": "string",
                "enum": [
                  "WhiteHot",
                  "BlackHot",
                  "Rainbow",
                  "RainHC",
                  "IronBow",
                  "Lava",
                  "Arctic",
                  "GlowBow",
                  "GradedFire",
                  "Hottest"
                ]
              }
            },
            "required": [
              "zoomInfraredCamera",
              "colorPaletteInfraredCamera"
            ]
          },
          "trackedEntity": {
            "type": "number",
            "description": "If servoing mode is active and visual payload is tracking a target : The entity id that is tracked by the sensor"
          },
          "cameraLookAtPoint": {
            "title": "GeoPoint",
            "type": "object",
            "description": "",
            "properties": {
              "lat": {
                "type": "number",
                "minimum": -90,
                "maximum": 90,
                "description": "Decimal degrees"
              },
              "lon": {
                "type": "number",
                "minimum": -180,
                "maximum": 180,
                "description": "Decimal degrees"
              },
              "alt": {
                "type": "number"
              }
            },
            "required": [
              "lat",
              "lon"
            ]
          },
          "cameraFootprint": {
            "title": "Polygon",
            "type": "object",
            "x-examples": {
              "example-1": {}
            },
            "properties": {
              "coordinates": {
                "type": "array",
                "minItems": 3,
                "items": {
                  "$ref": "#/properties/gimbals/items/properties/cameraLookAtPoint"
                }
              }
            },
            "required": [
              "coordinates"
            ]
          },
          "opticalVideoURL": {
            "type": "string",
            "description": "The URL of the rtsp stream from the optical sensor"
          },
          "infraredVideoURL": {
            "type": "string",
            "description": "The URL of the rtsp stream from the infrared sensor"
          }
        },
        "required": [
          "id",
          "droneId",
          "gimbalParameters",
          "visibleCameraParameters",
          "infraredCameraParameters"
        ]
      }
    }
  },
  "required": [
    "timestamp",
    "gimbals"
  ]
}
