{
  "title": "repMissionRoute",
  "type": "object",
  "description": "",
  "properties": {
    "id": {
      "type": "string",
      "description": "The Mission Route entity id in repository.\nUse Blnak \"\" when New"
    },
    "requestId": {
      "type": "string",
      "description": "The Request Id that the Mission Route linked to.\nIf no Request linked then Blank \"\""
    },
    "missionId": {
      "type": "string",
      "description": "The Mission id that the Mission Route is linked to.\nIf no link to Mission then don't send field"
    },
    "missionType": {
      "type": "string",
      "enum": [
        "CommRelay",
        "Observation",
        "Scan",
        "Patrol",
        "None"
      ],
      "description": "The mission type in case no request or mission linked"
    },
    "route": {
      "type": "array",
      "minItems": 2,
      "items": {
        "title": "PointOfRoute",
        "type": "object",
        "properties": {
          "point": {
            "title": "GeoPoint",
            "type": "object",
            "description": "",
            "properties": {
              "lat": {
                "type": "number",
                "minimum": -90,
                "maximum": 90,
                "description": "Decimal degrees"
              },
              "lon": {
                "type": "number",
                "minimum": -180,
                "maximum": 180,
                "description": "Decimal degrees"
              },
              "alt": {
                "type": "number"
              }
            },
            "required": [
              "lat",
              "lon"
            ]
          },
          "velocity": {
            "type": "number",
            "description": "The UAV velocity at point in m/s"
          },
          "heading": {
            "type": "number",
            "description": "Uav heading in degrees refrence to true north"
          }
        },
        "required": [
          "point"
        ]
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "Active",
        "NotActive"
      ]
    },
    "lastAction": {
      "type": "string",
      "description": "Last action on entity",
      "enum": [
        "Insert",
        "Update",
        "Delete"
      ]
    },
    "version": {
      "type": "number",
      "description": "The entity version in repository"
    }
  },
  "required": [
    "id",
    "requestId",
    "route",
    "status"
  ]
}
